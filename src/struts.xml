<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true"/>
    <constant name="struts.custom.i18n.resources" value="Nathan_website" />
    
	<package name="basicstruts2" extends="struts-default">
		<action name="index" class="com.nathanchen.controller.GlobalAction" method="index">
			<result name="success">
				/views/index.jsp
			</result>
		</action>	
		
		<action name="gotoBlog" class="com.nathanchen.controller.GlobalAction" method="gotoBlog">
			<result name="success">
				/views/eachBlog.jsp
			</result>
		</action>
		
		<action name="postComment" class="com.nathanchen.controller.GlobalAction" method="postComment">
			<result name="success" type="redirectAction">
				<param name="namespace">/struts</param>
				<param name="actionName">gotoBlog</param>
				<param name="articleId">${articleId}</param>
				<param name="isError">${0}</param>
			</result>
			<result name="input" type="redirectAction">
				<param name="namespace">/struts</param>
				<param name="actionName">gotoBlog</param>
				<param name="articleId">${blogComment.getArticleId()}</param>
				<param name="isError">${1}</param>
			</result>
		</action>
		
		<action name="similarPosts" class="com.nathanchen.controller.GlobalAction" method="similarPosts">
			<result name="success">
				/views/listTagged.jsp
			</result>
			<result name="error">
				/views/eachBlog.jsp
			</result>
		</action>
		
		<action name="globalSearch" class="com.nathanchen.controller.GlobalAction" method="globalSearch">
			<result name="success">
				/views/globalSearchResults.jsp
			</result>
		</action>
		
	</package>
	
</struts>